{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,

    "baseUrl": ".",
    "paths": {
      "api/*": ["src/http/*"],
      "utils/*": ["src/utils/*"],
      "hooks/*": ["src/hooks/*"],
      "testdata/*": ["src/testdata/*"],
      "factory/*": ["src/factory/*"],
      "contracts/*": ["src/contracts/*"],
      "endpoints/*": ["src/endpoints/*"],
      "helper/*": ["src/helper/*"]
    },

    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "skipLibCheck": true
  },
  "include": ["src", "tests"]
}
